{
  "name": "monorepo-bun-hono-turborepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run --cwd apps/backend dev\" \"bun run --cwd apps/frontend dev\"",
    "dev:frontend": "bun run --cwd apps/frontend dev",
    "dev:backend": "bun run --cwd apps/backend dev"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.1.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
